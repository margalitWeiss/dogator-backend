{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["./customes", "./node_modules/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}